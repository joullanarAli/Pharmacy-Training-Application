@model PharmacyDB.Models.Drug
<div class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="card card-warning card-outline">
              <div class="card-body box-profile" style="align-self: center; width:70%;">
            <form asp-action="Edit" method="post" >
                <h2>Edit Drug</h2>
                <div class="modal-body">
                    <input id="Id" asp-for="Id" class="form-control" type="hidden" />
                    <label asp-for="EnglishName"></label>
                    <input id="EnglishName" asp-for="EnglishName" class="form-control" />
                    <span class="text-danger" asp-validation-for="EnglishName"></span>
                    <br />
                    <label asp-for="ArabicName"></label>
                    <input id="ArabicName" asp-for="ArabicName" class="form-control" />
                    <span class="text-danger" asp-validation-for="ArabicName"></span>
                    <br />
                    <label asp-for="Description"></label>
                    <input id="Description" asp-for="Description" class="form-control" />
                    <span class="text-danger" asp-validation-for="Description"></span>
                    <br />
                    <label asp-for="SideEffects"></label>
                    <input id="SideEffects" asp-for="SideEffects" class="form-control" />
                    <span class="text-danger" asp-validation-for="SideEffects"></span>
                    <br />
                    <input id="Image" asp-for="Image" class="form-control" type="hidden" />
                    <input id="BrandId" asp-for="BrandId" class="form-control" type="hidden" />
                    <input id="CategoryId" asp-for="CategoryId" class="form-control" type="hidden" />
                    <input id="Category" asp-for="Category" class="form-control" type="hidden" />
                    <input id="Brand" asp-for="Brand" class="form-control" type="hidden" />
                    <input id="imageFile" asp-for="imageFile" class="form-control" type="hidden" />
                    <input id="DrugActiveIngredientsList" asp-for="DrugActiveIngredientsList" class="form-control" type="hidden" />
                    <input id="DrugFormsList" asp-for="DrugFormsList" class="form-control" type="hidden" />

                    <br />
                    <span id="error" class="text-danger"></span>

                </div>
            <div class="modal-footer">
                <input type="submit" class="btn btn-primary" value="Submit" />
                <button class="btn btn-light" data-dismiss="modal">Cancel</button>
            </div>
            </form>
            </div>
              <!-- /.card-body -->
            </div> 
        </div>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>