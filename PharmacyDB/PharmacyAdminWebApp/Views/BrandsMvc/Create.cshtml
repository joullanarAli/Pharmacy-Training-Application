
@model PharmacyDB.Models.Brand
<!DOCTYPE html>
<html lang="en">
    <head>
        <style>
            .form-control{
                width:50%;
                margin-left:200px;
            }
            label{
                 margin-left:200px;
            }
            #isVip{
                 margin-left:450px;
            }
            .btn-secondary{
                margin-left:200px;                
            }
            .btn-primary{
                margin-right:600px;
               /* margin-left:50px;*/
            }
            .text-danger{      
                /*left:200px;*/
                margin-left: 200px;
            }
            h2{      
                color:teal;
                margin-left: 200px;
                font-family:'Lucida Calligraphy';
                font-weight:bold;
            }
        </style>
    </head>

    <body>
        <form class="form" method="post" action="@Url.Action("Create","BrandsMvc")" enctype="multipart/form-data">
            <h2>Create Brand</h2>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input autocomplete="off" asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
                <br />
                <label asp-for="imageFile">Logo</label>
                <input autocomplete="off" asp-for="imageFile" class="form-control" type="file" />
                <span asp-validation-for="imageFile" class="text-danger"></span>
                <br />
            </div>
            <div class="d-flex justify-content-between">
                <a href="/BrandsMvc/Index" class="btn btn-secondary">Back</a>
                <input type="submit" class="btn btn-primary" value="Submit" />
            </div>
        </form>
</body>
</html>


