
@model PharmacyAdminWebApp.Models.ImageViewModel
<!DOCTYPE html>
<html lang="en">
    <head>
        <style>
            .form-control{
                width:50%;
                margin-left:200px;
            }
            label{
                 margin-left:200px;
            }
            #isVip{
                 margin-left:450px;
            }
            .btn-secondary{
                margin-left:200px;                
            }
            .btn-primary{
                margin-right:600px;
            }
            .text-danger{      
                margin-left:200px;
            }
            h2{      
                color:teal;
                margin-left: 200px;
                font-family:'Lucida Calligraphy';
                font-weight:bold;
            }
        </style>
    </head>

    <body>
        <form class="form" method="post" action="@Url.Action("AddImageToQuestion","QuestionsMvc")" enctype="multipart/form-data" >
            <h2>Create Image</h2>
            <div class="form-group">
                <input autocomplete="off" asp-for="QuestionId" class="form-control" type="hidden" />
                <label asp-for="Path">Image</label>
                <input autocomplete="off" asp-for="Path" class="form-control" required type="file"/>
                <span asp-validation-for="Path" class="text-danger"></span>
                
                <br />
                
            </div>
            <div class="d-flex justify-content-between">
                <a href="/QuestionsMvc/Index" class="btn btn-secondary">Back</a>
                <input type="submit" class="btn btn-primary" value="Submit" />
            </div>
        </form>
</body>
</html>


